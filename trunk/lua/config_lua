case "$1" in
--libs)
ldflags=-llua -llualib
for libpath in / /usr /usr/local $HOME; do 
ls $libpath/lib/liblua.so* >/dev/null 2>&1  && ldflags="-L$libpath/lib $ldflags" && break
ls $libpath/lib/liblua.a* >/dev/null 2>&1  && ldflags="-L$libpath/lib $ldflags" && break
done;
echo $ldflags
;;
--cflags)
for libpath in / /usr /usr/local $HOME; do 
if [ -e $libpath/include/lua.h ]; then
	echo -I$libpath/include
	break
fi
done;
;;
*)
;;
esac;
